<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <TableView fx:id="marks" prefHeight="600.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="fileName" prefWidth="350.0" text="File Name" />
            <TableColumn fx:id="actualClass" prefWidth="125.0" text="Actual Class" />
            <TableColumn fx:id="spamProbability" prefWidth="125.0" text="Spam Probability" />
        </columns>
        <TextField fx:id="accuracyField"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="precisionField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </TableView>
</GridPane>